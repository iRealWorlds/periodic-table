{
    "compilerOptions": {
        "module": "ES2020",
        "target": "ES2020",
        "jsx": "preserve",
        "strictFunctionTypes": true,
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "resolveJsonModule": true,
        "moduleResolution": "Node"
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "**/old/*"
    ],
    "compileOnSave": true
}
